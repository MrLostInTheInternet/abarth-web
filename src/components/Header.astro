---
const currentPage = Astro.url.pathname || window.location.pathname;
const currentLanguage = Astro.props.lang;
---

<header>
  <div class="header-content">
    <div class="title-container">
      <img src="/favicon.svg" alt="3D Prints Logo" class="logo" width="40" height="40" />
      <h1 class="main-title">Abarth's 3D Prints</h1>
    </div>
    <nav>
      <ul>
        <li>
          <a href="/" class="navlink" aria-current={currentPage === "/" ? "page" : undefined}>Home</a>
        </li>
        <li>
          <a href="/contact" class="navlink" aria-current={currentPage === "/contact" ? "page" : undefined}>Contact</a>
        </li>
        <li>
          <a href="/about" class="navlink" aria-current={currentPage === "/about" ? "page" : undefined}>About me</a>
        </li>
        {currentPage === "/about" && (
          <div class="language-switcher">
            <li>
              <a href={`${currentPage}${currentPage.includes('?') ? '&' : '?'}lang=it`} class={`language-link ${currentLanguage === 'it' ? 'active' : ''}`} aria-current={currentLanguage === 'it' ? "page" : undefined}>IT</a>
            </li>
            <li>
              <a href={`${currentPage}${currentPage.includes('?') ? '&' : '?'}lang=en`} class={`language-link ${currentLanguage === 'en' ? 'active' : ''}`} aria-current={currentLanguage === 'en' ? "page" : undefined}>EN</a>
            </li>
          </div>
        )}
      </ul>
    </nav>
  </div>
</header>

<style>
header {
  background-color: #f4f4f4;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  padding: 1rem;
}

.header-content {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
}

.title-container {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.logo {
  filter: drop-shadow(2px 2px 2px rgba(0, 0, 0, 0.2));
}

.main-title {
  font-size: 2.5rem;
  font-weight: bold;
  color: #2c3e50;
  margin: 0;
  text-transform: uppercase;
  letter-spacing: 2px;
  background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
  transform: perspective(500px) rotateX(10deg);
  transition: transform 0.3s ease;
}

.main-title:hover {
  transform: perspective(500px) rotateX(0deg);
}

nav {
  width: 100%;
  display: flex;
  justify-content: center;
}

nav ul {
  list-style: none;
  display: flex;
  gap: 2rem;
  align-items: center;
  padding: 0;
  margin: 0;
}

.navlink {
  text-decoration: none;
  color: black;
  font-weight: bold;
  position: relative;
  transition: all 0.3s ease;
}

.navlink:hover {
  color: #007bff;
  transform: scale(1.1);
}

.navlink::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 3px;
  background-color: #007bff;
  bottom: -5px;
  left: 0;
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.navlink:hover::after {
  transform: scaleX(1);
}

.navlink[aria-current="page"] {
  color: #007bff;
  font-weight: bold;
}

.language-switcher {
  display: flex;
  gap: 1rem;
  justify-content: center;
}

.language-switcher a {
  text-decoration: none;
  color: black;
  font-weight: bold;
  transition: all 0.3s ease;
}

.language-switcher a:hover {
  color: #007bff;
}

.language-switcher a.active {
  color: #007bff;
  font-weight: bold;
  text-decoration: underline;
}

@media (max-width: 768px) {
  .main-title {
    font-size: 1.8rem;
  }

  nav ul {
    gap: 1rem;
  }
}

@media (max-width: 480px) {
  .main-title {
    font-size: 1.5rem;
  }

  .title-container {
    flex-direction: column;
    text-align: center;
  }
}
</style>